<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MyAppPortfolioActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/main_title"
            android:id="@+id/textView_mainTitle"
            android:textSize="32sp"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonText_Spotify"
            android:id="@+id/button_spotify"
            android:onClick="launchSpotifyApp"
            android:stateListAnimator="@anim/my_button_animator"
            android:elevation="10dp"
            android:layout_below="@+id/textView_mainTitle"
            android:layout_alignStart="@+id/button_scores"
            android:layout_marginTop="35dp"
            android:layout_alignEnd="@+id/button_scores" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonText_Scores"
            android:id="@+id/button_scores"
            android:onClick="launchScoresApp"
            android:stateListAnimator="@anim/my_button_animator"
            android:elevation="10dp"
            android:layout_below="@+id/button_spotify"
            android:layout_alignStart="@+id/button_library"
            android:layout_alignEnd="@+id/button_library" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonText_Library"
            android:id="@+id/button_library"
            android:onClick="launchLibraryApp"
            android:stateListAnimator="@anim/my_button_animator"
            android:elevation="10dp"
            android:layout_below="@+id/button_scores"
            android:layout_alignStart="@+id/button_build"
            android:layout_alignEnd="@+id/button_build" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonText_Build"
            android:id="@+id/button_build"
            android:onClick="launchBuildApp"
            android:stateListAnimator="@anim/my_button_animator"
            android:elevation="10dp"
            android:layout_below="@+id/button_library"
            android:layout_alignStart="@+id/button_xyz"
            android:layout_alignEnd="@+id/button_xyz" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonText_Xyz"
            android:id="@+id/button_xyz"
            android:onClick="launchXyzApp"
            android:stateListAnimator="@anim/my_button_animator"
            android:elevation="10dp"
            android:layout_below="@+id/button_build"
            android:layout_alignEnd="@+id/button_capstone"
            android:layout_alignStart="@+id/button_capstone" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonText_Capstone"
            android:id="@+id/button_capstone"
            android:onClick="launchCapstoneApp"
            android:background="@color/materialTheme_yellow"
            android:textColor="@color/colorPrimary"
            android:stateListAnimator="@anim/my_button_animator"
            android:elevation="10dp"
            android:layout_below="@+id/button_xyz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

</RelativeLayout>

</ScrollView>